<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
>

    <TextView
            android:id="@+id/buyer_label"
            android:text="@string/buyer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/buyer_text"
            android:textSize="@dimen/textSize"
    />

    <EditText
            android:id="@+id/buyer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/buyer_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/textSize"
            android:autofillHints="name" tools:targetApi="o"
            android:inputType="textAutoComplete"
    android:labelFor="@id/buyer_label"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buyer_text"
            android:layout_marginTop="@dimen/margin"
    />

    <View
            android:id="@+id/endbar"
            android:layout_width="0dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@id/list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimary"/>
    <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/endbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimaryDark"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm"
            android:text="@string/buy_confirm"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/endbar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
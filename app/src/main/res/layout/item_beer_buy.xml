<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
            android:layout_margin="@dimen/margin_thin"
            style="@style/AppTheme.card">
        <LinearLayout style="@style/AppTheme.linear_in_card" >
            <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"/>
            <include layout="@layout/line"/>
            <include android:id="@+id/ingredients" layout="@layout/two_column" android:visibility="gone"/>
            <include android:id="@+id/malt" layout="@layout/two_row"/>
            <include android:id="@+id/hops" layout="@layout/two_row"/>
            <include android:id="@+id/yeast" layout="@layout/two_row"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/AppTheme.rect_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            >
        <LinearLayout style="@style/AppTheme.linear_in_card" >
            <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"/>
            <include layout="@layout/line"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_thin">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <include android:id="@+id/first_label"  layout="@layout/text_under_line" />
                    <TextView
                            android:id="@+id/first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <include android:id="@+id/sec_label"  layout="@layout/text_under_line" />
                    <TextView
                            android:id="@+id/sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <include android:id="@+id/third_label"  layout="@layout/text_under_line" />
                    <TextView
                            android:id="@+id/third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                        android:contentDescription="@string/list_item_description"
                        android:id="@+id/image"
                        android:layout_width="@dimen/beer_list_img_size"
                        android:layout_height="@dimen/beer_list_img_size"
                        android:layout_marginStart="@dimen/margin_thin"
                        android:src="@color/srm_10"
                />


            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>